{
	"name": "@ecopages/radiant-monorepo",
	"description": "A minimalist web component library designed for simplicity and flexibility",
	"scripts": {
		"clean": "rm -rf node_modules bun.lockb && bun install && bun run build:all",
		"format": "bunx @biomejs/biome format --write .",
		"lint": "bunx @biomejs/biome check --apply .",
		"prepare": "husky",
		"build:all": "bun run --filter '*' build:lib",
		"test:all": "bun run --filter '*' test:lib",
		"changeset": "changeset",
		"prerelease": "bun run build:all && bun run test:all",
		"release": "changeset publish",
		"dev:docs": "bun run --filter @ecopages/radiant-docs dev",
		"dev:playground-vite": "bun run --filter playground-vite dev",
		"dev:playground-html-esbuild": "bun run --filter playground-html-esbuild dev",
		"dev:playground-html-bun": "bun run --filter playground-html-bun dev"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.7",
		"@types/bun": "latest",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7"
	},
	"peerDependencies": {
		"typescript": "^5.5.3"
	},
	"workspaces": ["apps/*", "packages/*", "playground/*"]
}
